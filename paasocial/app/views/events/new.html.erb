<%= simple_form_for @event do |f| %>
  <%= f.input :title, label: 'The name of your event', error: 'Title is mandatory, please specify one' %>
  <%= f.input :description, hint: 'No special characters.' %>
  <%= f.input :datetime, placeholder: '27/04/18 6pm' %>
  <%= f.input :location, placeholder: 'London' %>
  <%= f.button :submit %>
<% end %>
